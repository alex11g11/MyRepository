@model IEnumerable<Server.Models.Time>

@{
    ViewBag.Title = "Schedule";
}

<h2>Schedule for Device @ViewBag.DeviceSerial</h2>

<p>
    @Html.ActionLink("Create New", "CreateShedule", new { DeviceSerial = ViewBag.DeviceSerial })
</p>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.From)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.To)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.From)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.To)
            </td>
            <td>
                @Html.ActionLink("Delete Schedule", "DeleteShedule", new { id = item.Id })
            </td>
        </tr>
    }

</table>
<div>
    @Html.ActionLink("Set Timing", "setTiming", new { DeviceSerial = ViewBag.DeviceSerial })
    @Html.ActionLink("Back to Devices Table", "Index")
</div>
